{
  "files": {
    "includes": [
      "**",
      "!node_modules/**",
      "!dist/**",
      "!docs/**",
      "!coverage/**"
    ]
  },

  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },

  "linter": {
    "enabled": true
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },

  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":URL:", ":NODE:", ":PACKAGE:", ":PATH:"]
          }
        }
      }
    }
  }
}
