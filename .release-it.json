{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",

  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },

  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "assets": ["CHANGELOG.md"]
  },

  "hooks": {},

  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },

  "npm": {
    "publish": true
  }
}
